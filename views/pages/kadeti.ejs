<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head.ejs') %> 
    <link rel="stylesheet" href="css/kadeti.css" />
    <script src="js/kadeti.js"></script>
    <% if (loggedInUser && loggedInUser.role.roleName === "KdAdmin") { %>
      <script>
        const deletePost = (postid) => {
          fetch(window.location.pathname + '/delete-kd-post', {
            method: "POST",
            body: {
              postId: postid
            }
          }).then(window.location.reload())
        }
      </script>
      <% } %>
  </head>

  <body>
    <header>
        <%- include('../partials/header')%>
    </header>

    <div class="container mt-3">
      <div class="row">
        <div class="col-12" id="main-content">
          <% myPosts.forEach((mPost) => { %>
            <%- include('../partials/post.ejs', {post: mPost})%>
          <% }) %>
        </div>
      </div>
    </div>
    <!--dijalog-->
    <div class="modal" tabindex="-1" id="contentModal">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modal-title-text"></h5>
          </div>
          <div class="modal-body">
            <p id="modal-body-text"></p>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-outline-dark"
              id="copy-content-btn"
            >
              <img src="images/icons/copy.svg" />
            </button>
            <button
              type="button"
              class="btn btn-primary"
              data-bs-dismiss="modal"
              aria-label="Close"
            >
              Затвори
            </button>
            <script>
              document.getElementById("copy-content-btn").onclick =
                copyToClipboard;
            </script>
          </div>
        </div>
      </div>
      <div class="toast-container bottom-0 start-50 translate-middle-x">
        <div
          class="toast align-items-center text-white bg-primary border-0"
          role="alert"
          aria-live="assertive"
          aria-atomic="true"
          id="my-toast"
        >
          <div class="d-flex">
            <div class="toast-body">Копирано у привремену меморију.</div>
            <button
              type="button"
              class="btn-close btn-close-white me-2 m-auto"
              data-bs-dismiss="toast"
              aria-label="Close"
            ></button>
          </div>
        </div>
      </div>
    </div>
    <script>
        const mainContent = $('#main-content').html()
    </script>
  </body>
</html>
